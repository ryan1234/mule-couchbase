<?xml version="1.0" encoding="UTF-8"?>

<namespace xmlns="http://www.mulesoft.org/schema/mule/tooling.attributes" xmlns:mule="http://www.mulesoft.org/schema/mule/core" prefix="couchbase" url="http://www.mulesoft.org/schema/mule/couchbase">
  <global-cloud-connector extends="http://www.mulesoft.org/schema/mule/couchbase/abstractCouchbaseConnectorGeneric" image="icons/large/couchbase-connector-48x32.png" localId="config" icon="icons/small/couchbase-connector-24x16.png" description="Global Couchbase configuration information." caption="Couchbase">
    <attribute-category description="Couchbase configuration properties." caption="General">
      <group caption="Generic" id="couchbaseGenericProperties">
        <name required="true" description="Give a name to this configuration so it can be later referenced by config-ref." caption="Name" name="name"></name>
      </group>
      <group caption="Connection" id="connection">
        <string javaType="java.lang.String" required="false" description="The bucket name in the cluster you wish to use." caption="Bucket Name" name="bucketName"></string>
        <string javaType="java.lang.String" required="false" description="The password for the bucket.  Default is empty." caption="Password" name="password"></string>
      </group>
      <group caption="General" id="general">
        <string javaType="java.lang.String" required="true" description="The URI of the server you want to connect to - as a string.  Example: http://servername.com:8091/pools." caption="Uri" name="Uri"></string>
      </group>
    </attribute-category>
  </global-cloud-connector>
  <cloud-connector extends="http://www.mulesoft.org/schema/mule/couchbase/abstractCouchbaseConnectorGeneric" image="icons/large/couchbase-connector-48x32.png" localId="couchbase-connector" icon="icons/small/couchbase-connector-24x16.png" description="Cloud Connector." caption="Couchbase" aliasId="org.mule.tooling.ui.modules.core.pattern.couchbase">
    <attribute-category description="General." caption="General">
      <group caption="Generic" id="couchbaseConnectorGeneric">
        <modeSwitch description="Operation." caption="Operation" name="Couchbase operations to execute">
          <mode modeLabel="Get" modeId="http://www.mulesoft.org/schema/mule/couchbase/get"></mode>
          <mode modeLabel="Remove" modeId="http://www.mulesoft.org/schema/mule/couchbase/remove"></mode>
          <mode modeLabel="Store" modeId="http://www.mulesoft.org/schema/mule/couchbase/store"></mode>
        </modeSwitch>
      </group>
    </attribute-category>
  </cloud-connector>
  <cloud-connector abstract="true" image="icons/large/couchbase-connector-48x32.png" localId="abstractCouchbaseConnectorGeneric" icon="icons/small/couchbase-connector-24x16.png" description="Interact with Couchbase." caption="Abstractcouchbaseconnectorgeneric">
    <attribute-category description="General." caption="General">
      <group caption="Generic" id="abstractCouchbaseConnectorGeneric">
        <globalRef requiredType="http://www.mulesoft.org/schema/mule/couchbase/config" required="true" description="Specify which configuration to use for this invocation." caption="Config Reference" name="config-ref"></globalRef>
      </group>
    </attribute-category>
  </cloud-connector>
  <cloud-connector returnType="java.lang.String" extends="http://www.mulesoft.org/schema/mule/couchbase/abstractCouchbaseConnectorGeneric" abstract="true" image="icons/large/couchbase-connector-48x32.png" localId="get" icon="icons/small/couchbase-connector-24x16.png" caption="Get">
    <attribute-category description="General." caption="General">
      <group caption="General" id="general">
        <string javaType="java.lang.String" required="true" description="The key of the JSON object you want to retrieve." caption="Key" name="key"></string>
      </group>
    </attribute-category>
    <attribute-category description="Connection." caption="Connection">
      <group caption="Connection" id="connection">
        <label caption="Use these fields to override the credentials defined in the Couchbase connector."></label>
        <label caption=""></label>
        <string javaType="java.lang.String" required="false" description="The bucket name in the cluster you wish to use." caption="Bucket Name" name="bucketName"></string>
        <string javaType="java.lang.String" required="false" description="The password for the bucket.  Default is empty." caption="Password" name="password"></string>
      </group>
    </attribute-category>
  </cloud-connector>
  <cloud-connector returnType="void" extends="http://www.mulesoft.org/schema/mule/couchbase/abstractCouchbaseConnectorGeneric" abstract="true" image="icons/large/couchbase-connector-48x32.png" localId="store" icon="icons/small/couchbase-connector-24x16.png" caption="Store">
    <attribute-category description="General." caption="General">
      <group caption="General" id="general">
        <string javaType="java.lang.String" required="true" description="The key of the JSON object you want to store." caption="Key" name="key"></string>
        <string javaType="java.lang.String" required="true" description="The value in JSON (as a string)." caption="Value" name="value"></string>
      </group>
    </attribute-category>
    <attribute-category description="Connection." caption="Connection">
      <group caption="Connection" id="connection">
        <label caption="Use these fields to override the credentials defined in the Couchbase connector."></label>
        <label caption=""></label>
        <string javaType="java.lang.String" required="false" description="The bucket name in the cluster you wish to use." caption="Bucket Name" name="bucketName"></string>
        <string javaType="java.lang.String" required="false" description="The password for the bucket.  Default is empty." caption="Password" name="password"></string>
      </group>
    </attribute-category>
  </cloud-connector>
  <cloud-connector returnType="void" extends="http://www.mulesoft.org/schema/mule/couchbase/abstractCouchbaseConnectorGeneric" abstract="true" image="icons/large/couchbase-connector-48x32.png" localId="remove" icon="icons/small/couchbase-connector-24x16.png" caption="Remove">
    <attribute-category description="General." caption="General">
      <group caption="General" id="general">
        <string javaType="java.lang.String" required="true" description="The key of the JSON object you want to remove." caption="Key" name="key"></string>
      </group>
    </attribute-category>
    <attribute-category description="Connection." caption="Connection">
      <group caption="Connection" id="connection">
        <label caption="Use these fields to override the credentials defined in the Couchbase connector."></label>
        <label caption=""></label>
        <string javaType="java.lang.String" required="false" description="The bucket name in the cluster you wish to use." caption="Bucket Name" name="bucketName"></string>
        <string javaType="java.lang.String" required="false" description="The password for the bucket.  Default is empty." caption="Password" name="password"></string>
      </group>
    </attribute-category>
  </cloud-connector>
</namespace>